<p style="color: green"><%= notice %></p>

<% content_for :title, "Tests" %>

<h1>Tests</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.first_name %></td>
        <td><%= test.last_name %></td>
        <td><%= test.email %></td>
        <td><%= test.phone %></td>
        <td><%= test.address %></td>
        <td><%= link_to "Show", test, class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to "Edit", edit_test_path(test), class: "btn btn-outline-success btn-sm" %></td>
        <td><%= link_to "Destroy", test, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New test", new_test_path, class:"btn btn-secondary" %>
